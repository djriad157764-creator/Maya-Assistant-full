# Maya Assistant Environment Configuration

# Application Settings
APP_NAME="Maya Assistant"
APP_VERSION="2.0.0"
APP_ENV="development"  # development, testing, production
APP_DEBUG="True"
APP_SECRET_KEY="change-this-in-production"

# API Keys
OPENWEATHER_API_KEY="your_openweather_api_key_here"
NEWSAPI_KEY="your_newsapi_key_here"
GOOGLE_API_KEY="your_google_api_key_here"
GOOGLE_TRANSLATE_KEY="your_google_translate_key_here"

# Database Configuration
DATABASE_TYPE="sqlite"  # sqlite, mysql, postgresql
DATABASE_NAME="maya_assistant.db"
DATABASE_HOST="localhost"
DATABASE_PORT="3306"
DATABASE_USER="maya"
DATABASE_PASSWORD="secure_password_here"

# Voice Configuration
VOICE_LANGUAGE="bn"
VOICE_GENDER="female"
VOICE_RATE="150"
VOICE_VOLUME="0.9"

# AI Model Paths
BRAIN_MODEL_PATH="models/banglabert"
VISION_MODEL_PATH="models/yolov5"
SPEECH_MODEL_PATH="models/whisper"

# System Paths
DATA_DIR="data"
LOGS_DIR="logs"
MODELS_DIR="models"
TEMP_DIR="temp"
BACKUP_DIR="backups"

# Security Settings
ENCRYPTION_KEY="change-this-very-secure-key"
ENABLE_ENCRYPTION="True"
REQUIRE_AUTH="False"
AUTH_PASSWORD=""

# Network Settings
PROXY_ENABLED="False"
PROXY_URL=""
PROXY_PORT=""
ALLOW_INTERNET="True"

# Performance Settings
MAX_THREADS="10"
MAX_CACHE_SIZE="1000"
ENABLE_CACHING="True"

# Logging Settings
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE="True"
LOG_TO_CONSOLE="True"
MAX_LOG_SIZE="10485760"  # 10MB

# Update Settings
CHECK_FOR_UPDATES="True"
AUTO_UPDATE="False"
UPDATE_CHANNEL="stable"  # stable, beta, alpha

# User Preferences
USER_NAME=""
USER_LANGUAGE="bn"
USER_TIMEZONE="Asia/Dhaka"
THEME="dark"  # dark, light, auto

# Third Party Services
EMAIL_SMTP_SERVER="smtp.gmail.com"
EMAIL_SMTP_PORT="587"
EMAIL_USERNAME=""
EMAIL_PASSWORD=""
EMAIL_FROM="maya@assistant.com"

SLACK_WEBHOOK_URL=""
TELEGRAM_BOT_TOKEN=""
DISCORD_WEBHOOK_URL=""

# Monitoring
ENABLE_MONITORING="True"
MONITORING_INTERVAL="60"  # seconds
ALERT_EMAIL=""
ALERT_PHONE=""

# Backup Settings
BACKUP_ENABLED="True"
BACKUP_INTERVAL="604800"  # 7 days in seconds
BACKUP_RETENTION="30"  # days

# Advanced Settings
ENABLE_EXPERIMENTAL="False"
MAX_MEMORY_USAGE="85"  # percentage
MAX_CPU_USAGE="80"  # percentage
AUTO_RESTART="False"